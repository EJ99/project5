        <!-- HEX Target -->
        <label for="colourValueHEX"></label>
        <input name="colour1" class="colourValueHEX" value="">
        <!-- HEX Trigger -->
        <button class="getColour">Generate Random</button>
      </div>
    </div>



  <!-- COLOUR TWO -->


    <div class="picker ">
      <div class="line">
        <div class="circle"></div>
        <!-- HEX Target -->
        <label for="colourValueHEX"></label>
        <input name="colour2" class="colourValueHEX" value="#43d614">
        <!-- HEX Trigger -->
        <button class="getColour">Generate Random</button>
      </div>
    </div>



  <!-- COLOUR THREE -->

    <div class="picker">
      <div class="line">
        <div class="circle"></div>
        <!-- HEX Target -->
        <label for="colourValueHEX"></label>
        <input name="colour3" class="colourValueHEX" value="#43d614">
        <!-- HEX Trigger -->
        <button class="getColour">Generate Random</button>
      </div>
    </div>


  <!-- COLOUR FOURS -->

    <div class="picker">
      <div class="line">
        <div class="circle"></div>
        <!-- HEX Target -->
        <label for="colourValueHEX"></label>
        <input name="colour4" class="colourValueHEX" value="#43d614">
        <!-- HEX Trigger -->
        <button class="getColour">Generate Random</button>
      </div>
    </div>

  </div>



  <!-- SECTION 3 -->
  <div class="section" id="section3" class="col 12">

    <h2>Typography</h2>

    <div class="styled-select">
        <label for="font1">Header Font</label>
        <select id="font1" name="font1">
          <option name="Roboto" value="Roboto">Roboto</option>
          <option name="Space Mono" value="Space Mono">Space Mono</option>
          <option name="Slabo 27px" value="Slabo 27px">Slabo</option>
          <option name="Raleway" value="Raleway">Raleway</option>
        </select>
    </div>


      <label for="font2">Paragaph Font</label>
      <select id="font2" name="font2">
        <option name="Roboto" value="Roboto">Roboto</option>
        <option name="Space Mono" value="Space Mono">Space Mono</option>
        <option name="Slabo 27px" value="Slabo 27px">Slabo</option>
        <option name="Raleway" value="Raleway">Raleway</option>
      </select>

      <div class="fontPreview">
        <h1 class="header">hello</h1>
        <input type="text" class="test1" name="" value="">
        <p class="paragraph">my name is</p>
        <textarea name="name" rows="8" cols="80" class="test2 "></textarea>
        <p>This text will be used in the guide</p>
      </div>

      <button>hipster ipsum</button>
      <button>lorem ipsum</button>
      <button>samuel ipsum</button>
  </div>


