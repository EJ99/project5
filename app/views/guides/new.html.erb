  <hr>

  <div class="section" id="section4">

    <h2>Icons</h2>

  </div>


  <!-- SECTION 5 -->

  <hr>

  <div class="section" id="section5">

    <h2>References</h2>

      <label for="trello">Trello</label>
      <input class="trello" name="trello" type="text">

      <label for="github">Github</label>
      <input class="github" name="github" type="text">

  </div>

  <hr>

  <div class="section" id="section6">

    <h2>Recipient</h2>

      <label for="recipient_name">Recipient Name</label>
      <input class="recipient_name" name="recipient_name" type="text">

      <label for="recipient_email">Recipient Email</label>
      <input class="recipient_email" name="recipient_email" type="text">

  </div>


  <button>SEND</button>
</form>
