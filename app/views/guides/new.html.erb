<form action="/guides" method="post" class="col 5">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <!-- SECTION 1A -->

  <div class="section" id="section1">

    <h2>Project</h2>

    <div class="start">
      <label for="">Title</label>
      <input class="title" name="title" type="text">

      <label for="description">Description</label>
      <input class="description" name="description" type="text">

      <label for="author">Author</label>
      <input class="author" name="author" type="text">
    </div>

  </div>

  <!-- SECTION 1A -->

  <div class="section" id="section1b">

    <h2>Logo</h2>

      <label for="file">Upload an image</label>
